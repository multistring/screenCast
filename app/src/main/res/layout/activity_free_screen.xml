    <RelativeLayout
        android:id="@+id/use_describe"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/search_rl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="invisible">
        <TextView
            android:id="@+id/use_describe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/cast_describe_one"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/use_describe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/use_describe1"
            android:layout_marginTop="10dp"
            android:text="@string/cast_describe_two"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/use_describe3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/use_describe2"
            android:layout_marginTop="3dp"
            android:text="@string/cast_describe_three"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />
    </RelativeLayout>


    <!--加载中icon-->
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loadingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:indicator="BallClipRotateMultiple"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="00:00:00"
        android:id="@+id/clock_time"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        />

</RelativeLayout>
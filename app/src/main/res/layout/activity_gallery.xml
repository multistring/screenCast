<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="multi.string.screencast.activity.GalleryActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:scaleType="centerCrop"
        android:src="@drawable/free_screen_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/statusView"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0" />

        <include
            android:id="@+id/headView"
            layout="@layout/gallery_head_view"
            app:layout_constraintTop_toBottomOf="@+id/statusView" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/maxImgLinear"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_margin="@dimen/dp_30"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headLinear">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/maxImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rotationImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rotation_img"
        android:padding="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_32"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/maxImgLinear"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_83"
        android:layout_marginBottom="@dimen/dp_100"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/playLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:itemCount="3"
        android:layout_marginStart="@dimen/dp_2_5"
        android:layout_marginEnd="@dimen/dp_2_5"
        tools:listitem="@layout/gallery_item">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/lastLinear"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_70"
        app:layout_constraintBottom_toBottomOf="@+id/playLinear"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/playLinear"
        app:layout_constraintTop_toTopOf="@+id/playLinear">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lastImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/last_img" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playLinear"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_120"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/lastLinear"
        app:layout_constraintRight_toLeftOf="@+id/nextLinear"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/playImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/play_img" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextLinear"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dp_70"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/playLinear"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/playLinear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playLinear">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nextImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/next_img" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>